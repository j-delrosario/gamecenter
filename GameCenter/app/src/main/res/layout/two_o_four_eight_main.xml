<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_o_four_eight_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:background="@drawable/background_2048"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="fall2018.csc2017.slidingtiles.twozerofoureight.GameActivity2048">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/audiowide"
            android:text="2048"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:textColor="#f3d7d7"
            android:textSize="70dp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/audiowide"
                android:text="@string/currentScore"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:textColor="#f3d7d7"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/score"
                android:layout_width="100dp"
                android:layout_height="47dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:textColor="#f3d7d7"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chathura_extrabold"
            android:text="Join the numbers and get to the 2048 tile!"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:textColor="#f3d7d7"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chathura_extrabold"
            android:text="The game autosaves."
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:textColor="#f3d7d7"
            android:textStyle="bold" />

    </LinearLayout>

    <fall2018.csc2017.slidingtiles.twozerofoureight.GameView2048
        android:id="@+id/gameView2048"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_layout">

    </fall2018.csc2017.slidingtiles.twozerofoureight.GameView2048>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/undo_2048"
                android:layout_width="106dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/undo"
                android:textAlignment="center"
                android:textColor="#f3d7d7"
                android:textSize="8sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/new_game_2048"
                    android:layout_width="74dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:text="@string/new_game"
                    android:textAlignment="center"
                    android:textColor="#f3d7d7"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/load_game_2048"
                    android:layout_width="74dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:text="@string/load_game_2048"
                    android:textAlignment="center"
                    android:textColor="#f3d7d7"
                    android:textSize="8sp" />
            </LinearLayout>
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/scoreboard_2048"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="2dp"
                android:backgroundTint="@android:color/transparent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Scoreboard"
                android:textColor="#f3d7d7"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>