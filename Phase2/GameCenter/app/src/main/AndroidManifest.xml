<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fall2018.csc2017.slidingtiles">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application android:name="fall2018.csc2017.slidingtiles.twozerofoureight.ContextStatic"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".LoginSystemActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SlidingTiles.GameActivity" />
        <activity
            android:name=".SlidingTiles.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".SlidingTiles.AndroidSelectImage"
            android:label="loadImage">
            <intent-filter>
                <action android:name="fall2018.csc2017.slidingtiles.slidingTiles.AndroidSelectImage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".twozerofoureight.GameActivity2048" />
        <activity android:name=".MatchingTiles.GameActivityMatch" />
        <activity android:name=".SlidingTiles.StartingActivityST" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".GameCentre.GameLaunchCentreActivity" />
        <activity android:name=".LeaderBoardActivity"></activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="certs"
            android:resource="@array/com_google_android_gms_fonts_certs" />
    </application>

</manifest>